<%= render 'shared/errors', obj:@article %> 
<%= form_for @article do |f| %>
 
<h2>
    <%= f.label :title %><br>
    <%= f.text_field :title , class: "form-control  form-control-lg" %>
</h2>

<h2>
    <%= f.label :description %><br> 
    <%= f.text_area :description, class: "form-control  form-control-lg", rows: "3" %> 
</h2> 

    <%= f.submit 'Submit', :class => 'btn btn-xs btn-primary' %>
<br><br>

<% end %> 