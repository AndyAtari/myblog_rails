<%= render 'shared/errors' %> 
<%= form_for @article do |f| %>
 
<h2>
    <%= f.label :title %><br>
    <%= f.text_field :title , class: "form-control  form-control-lg" %>
</h2>

<h2>
    <%= f.label :description %><br> 
    <%= f.text_area :description, class: "form-control  form-control-lg", rows: "3" %> 
</h2> 

<p> 
    <%= f.submit %>
</p>

<% end %> 